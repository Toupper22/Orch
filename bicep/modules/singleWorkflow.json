{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.38.33.27573",
      "templateHash": "67259191264687461"
    }
  },
  "parameters": {
    "prefix": {
      "type": "string",
      "metadata": {
        "description": "Customer/project prefix for resource naming"
      }
    },
    "environment": {
      "type": "string",
      "allowedValues": [
        "dev",
        "test",
        "uat",
        "prod"
      ],
      "metadata": {
        "description": "Environment name (dev, test, uat, prod)"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[deployment().location]",
      "metadata": {
        "description": "Azure region for resources"
      }
    },
    "locationShort": {
      "type": "string",
      "metadata": {
        "description": "Azure region short code"
      }
    },
    "integrationName": {
      "type": "string",
      "metadata": {
        "description": "Integration name"
      }
    },
    "workflowName": {
      "type": "string",
      "metadata": {
        "description": "Workflow name (e.g., sepa-handler, d365fo-nomentia-artransactions)"
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {},
      "metadata": {
        "description": "Common tags"
      }
    },
    "workflowDefinition": {
      "type": "object",
      "metadata": {
        "description": "Workflow definition JSON"
      }
    },
    "workflowParameters": {
      "type": "object",
      "defaultValue": {},
      "metadata": {
        "description": "Workflow parameters (optional)"
      }
    },
    "connections": {
      "type": "object",
      "defaultValue": {},
      "metadata": {
        "description": "API connections (optional)"
      }
    },
    "state": {
      "type": "string",
      "defaultValue": "Enabled",
      "metadata": {
        "description": "Enable or disable the workflow"
      }
    }
  },
  "variables": {
    "resourceGroupName": "[format('{0}-{1}-{2}-rg', parameters('prefix'), parameters('environment'), parameters('integrationName'))]",
    "commonResourceGroupName": "[format('{0}-{1}-common-rg', parameters('prefix'), parameters('environment'))]",
    "commonTags": "[union(parameters('tags'), createObject('Environment', parameters('environment'), 'Integration', parameters('integrationName'), 'Workflow', parameters('workflowName'), 'ManagedBy', 'Bicep'))]",
    "logicAppName": "[format('{0}-{1}-{2}-{3}-logic', parameters('prefix'), parameters('environment'), parameters('integrationName'), parameters('workflowName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2025-04-01",
      "name": "[format('logicApp-{0}', parameters('workflowName'))]",
      "resourceGroup": "[variables('resourceGroupName')]",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "logicAppName": {
            "value": "[variables('logicAppName')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "tags": {
            "value": "[variables('commonTags')]"
          },
          "workflowDefinition": {
            "value": "[parameters('workflowDefinition')]"
          },
          "workflowParameters": {
            "value": "[parameters('workflowParameters')]"
          },
          "connections": {
            "value": "[parameters('connections')]"
          },
          "managedIdentityId": {
            "value": "[extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, variables('commonResourceGroupName')), 'Microsoft.ManagedIdentity/userAssignedIdentities', replace(format('{0}-{1}-{2}-id', parameters('prefix'), parameters('environment'), parameters('locationShort')), '-', ''))]"
          },
          "state": {
            "value": "[parameters('state')]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "metadata": {
            "_generator": {
              "name": "bicep",
              "version": "0.38.33.27573",
              "templateHash": "13092430735796584004"
            }
          },
          "parameters": {
            "logicAppName": {
              "type": "string",
              "metadata": {
                "description": "Name of the Logic App"
              }
            },
            "location": {
              "type": "string",
              "metadata": {
                "description": "Azure region for the Logic App"
              }
            },
            "tags": {
              "type": "object",
              "defaultValue": {},
              "metadata": {
                "description": "Tags to apply to the Logic App"
              }
            },
            "workflowDefinition": {
              "type": "object",
              "metadata": {
                "description": "Workflow definition JSON"
              }
            },
            "workflowParameters": {
              "type": "object",
              "defaultValue": {},
              "metadata": {
                "description": "Workflow parameters"
              }
            },
            "connections": {
              "type": "object",
              "defaultValue": {},
              "metadata": {
                "description": "API connections for the workflow"
              }
            },
            "managedIdentityId": {
              "type": "string",
              "defaultValue": "",
              "metadata": {
                "description": "Managed Identity resource ID (optional)"
              }
            },
            "state": {
              "type": "string",
              "defaultValue": "Enabled",
              "metadata": {
                "description": "Enable or disable the Logic App"
              }
            }
          },
          "resources": [
            {
              "type": "Microsoft.Logic/workflows",
              "apiVersion": "2019-05-01",
              "name": "[parameters('logicAppName')]",
              "location": "[parameters('location')]",
              "tags": "[parameters('tags')]",
              "identity": "[if(not(empty(parameters('managedIdentityId'))), createObject('type', 'UserAssigned', 'userAssignedIdentities', createObject(format('{0}', parameters('managedIdentityId')), createObject())), createObject('type', 'SystemAssigned'))]",
              "properties": {
                "state": "[parameters('state')]",
                "definition": "[parameters('workflowDefinition')]",
                "parameters": "[if(not(empty(parameters('connections'))), union(parameters('workflowParameters'), createObject('$connections', createObject('value', parameters('connections')))), parameters('workflowParameters'))]"
              }
            }
          ],
          "outputs": {
            "id": {
              "type": "string",
              "metadata": {
                "description": "Logic App resource ID"
              },
              "value": "[resourceId('Microsoft.Logic/workflows', parameters('logicAppName'))]"
            },
            "name": {
              "type": "string",
              "metadata": {
                "description": "Logic App name"
              },
              "value": "[parameters('logicAppName')]"
            },
            "principalId": {
              "type": "string",
              "metadata": {
                "description": "Logic App principal ID"
              },
              "value": "[if(not(empty(parameters('managedIdentityId'))), '', reference(resourceId('Microsoft.Logic/workflows', parameters('logicAppName')), '2019-05-01', 'full').identity.principalId)]"
            }
          }
        }
      }
    }
  ],
  "outputs": {
    "logicAppName": {
      "type": "string",
      "metadata": {
        "description": "Logic App name"
      },
      "value": "[reference(extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, variables('resourceGroupName')), 'Microsoft.Resources/deployments', format('logicApp-{0}', parameters('workflowName'))), '2025-04-01').outputs.name.value]"
    },
    "logicAppId": {
      "type": "string",
      "metadata": {
        "description": "Logic App ID"
      },
      "value": "[reference(extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, variables('resourceGroupName')), 'Microsoft.Resources/deployments', format('logicApp-{0}', parameters('workflowName'))), '2025-04-01').outputs.id.value]"
    }
  }
}